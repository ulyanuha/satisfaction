!!!
%html
  %head
    %title Satisfaction
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #header
      .logo Satisfaction
      %ul.user_menu
        - if current_user
          %li== Hello, #{current_user.username}
          %li= link_to "Sign out", logout_path, :method => :delete
        - else
          %li= link_to "Sign in", login_path
          %li= link_to "Sign up", signup_path
    #content= yield
